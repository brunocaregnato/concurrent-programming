package bmp_median_filter_java;

import java.awt.Color;
import java.awt.image.BufferedImage;
import java.io.DataOutputStream;
import java.io.File;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.OutputStream;

import javax.imageio.ImageIO;

public class Main {

	public static QuickSort quickSort = new QuickSort(); 
	
	public static void main(String args[]) {
		
		BufferedImage imageIn = null;
		
		if (args.length != 3) {
			System.out.printf("%s <imagem_de_entrada> <imagem_de_saida> <tamanho_mascara> <numero_threads>", args[0]);
			System.exit(0);
		}
		
		int maskSize = Integer.parseInt(args[2]); 
		
		File fileIn = new File(args[0]);
		File fileOut = new File(args[1]);
		try {
			imageIn = ImageIO.read(fileIn);			
		} 
		catch (IOException e) {
			e.printStackTrace();			
		}
		
		BufferedImage imageOut = doMedianFilter(imageIn, maskSize, fileOut);
				
		//escreve imagem de saida
		try {
			ImageIO.write(imageOut, "BMP", fileOut);
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	@SuppressWarnings("null")
	private static BufferedImage doMedianFilter(BufferedImage image, int maskSize, File file) {

		BufferedImage imageOut = image;
		
		int color_blue[] = new int[maskSize * maskSize];
		int color_green[] = new int[maskSize * maskSize];
		int color_red[] = new int[maskSize * maskSize];
				
	    for (int row = 0; row < image.getHeight(); row++) {
	      for (int col = 0; col < image.getWidth(); col++) {
	         if (row < (maskSize/2) || row >= image.getHeight() - (maskSize/2)
	            || col < (maskSize/2) || col >= image.getWidth() - (maskSize/2)) {
	        	 //TODO verificar se é isso mesmo, esta dando Coordinate out of bounds aqui tbm
	        	 Color c = new Color(image.getRGB(row, col));
	        	 imageOut.setRGB(row, col, (c.getRed() << 16 |  c.getGreen() << 8 | c.getBlue()));
//	        	 imageOut.setRGB(row, col, c.getGreen());
//	        	 imageOut.setRGB(row, col, c.getRed());	        	 
	             continue;
	         }

	         int point = 0;
	         for (int rowAux =- (maskSize/2); rowAux <= (maskSize/2); rowAux++) {
	            for (int colAux =- (maskSize/2); colAux <= (maskSize/2); colAux++) {
	            	//TODO verificar se é isso mesmo
	            	Color c = new Color(image.getRGB(row + rowAux, col + colAux));	               
	                color_blue[point] = c.getBlue();
	                color_green[point] = c.getGreen();
	                color_red[point] = c.getRed();
	                point++;
	            }
	         }

	         //TODO criar classe RGB com os pontos, dessa forma nao esta correto
	         quickSort.sort(color_blue, 0, point - 1);
	         quickSort.sort(color_green, 0, point - 1);
	         quickSort.sort(color_red, 0, point - 1);
	         imageOut.setRGB(row, col, (color_red[point/2] << 16 | color_green[point/2] << 8 | color_blue[point/2]));
//	         imageOut.setRGB(row, col, color_blue[point/2]); 
//	         imageOut.setRGB(row, col, color_red[point/2]);
	      }
	   }	    
		
		return imageOut;
	}
	
	
}
